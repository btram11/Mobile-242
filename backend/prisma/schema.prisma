generator client {
  provider = "prisma-client-js"
}

generator dbml {
  provider = "prisma-dbml-generator"
}

generator docs {
  provider = "node node_modules/prisma-docs-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model database_book {
  book_id         String        @id @default(uuid())
  title           String
  author          String
  publisher       String
  publishing_year Int
  summary         String
  price           Float
  listed_books    listed_book[]

  @@unique([title, author, publisher])
}

model listed_book {
  listing_id    String        @default(uuid())
  book_id       String
  condition     String
  listed_at     DateTime      @default(now())
  price         Float
  book          database_book @relation(fields: [book_id], references: [book_id])
  is_sold       Boolean
  sold_price    Float
  is_leased     Boolean
  leased_price  Float
  is_sold_rel   is_sold[]
  is_leased_rel is_leased[]
  is_bought_rel is_bought[]
  is_rented_rel is_rented[]

  @@id([book_id, listing_id])
}

model user {
  user_id         String      @id @default(uuid())
  username        String
  password_hashed String
  email           String      @unique
  faculty         String
  phone_number    String?
  access_token    String      @default("")
  salt            String      @default("")
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt
  provider        provider?
  is_bought_rel   is_bought[]
  is_rented_rel   is_rented[]
}

model provider {
  provider_id        String      @id @default(uuid())
  average_rating     Float?
  preferred_location String?
  policy             String?
  user               user        @relation(fields: [provider_id], references: [user_id])
  is_sold_rel        is_sold[]
  is_leased_rel      is_leased[]
}

model is_sold {
  book_id     String
  listing_id  String
  provider_id String
  provider    provider    @relation(fields: [provider_id], references: [provider_id])
  listed_book listed_book @relation(fields: [book_id, listing_id], references: [book_id, listing_id])

  @@id([book_id, listing_id, provider_id])
}

model is_leased {
  book_id       String
  listing_id    String
  provider_id   String
  rented_period Int
  provider      provider    @relation(fields: [provider_id], references: [provider_id])
  listed_book   listed_book @relation(fields: [book_id, listing_id], references: [book_id, listing_id])

  @@id([book_id, listing_id, provider_id])
}

model is_bought {
  book_id     String
  listing_id  String
  user_id     String
  location    String?
  pickup_date DateTime?
  modifiable  Boolean
  user        user        @relation(fields: [user_id], references: [user_id])
  listed_book listed_book @relation(fields: [book_id, listing_id], references: [book_id, listing_id])

  @@id([book_id, listing_id, user_id])
}

model is_rented {
  book_id     String
  listing_id  String
  user_id     String
  location    String?
  pickup_date DateTime?
  modifiable  Boolean
  end_date    DateTime?
  policy      String?
  user        user        @relation(fields: [user_id], references: [user_id])
  listed_book listed_book @relation(fields: [book_id, listing_id], references: [book_id, listing_id])

  @@id([book_id, listing_id, user_id])
}
